{
  "name": "node-api-boilerplate",
  "version": "1.0.0",
  "scripts": {
    "run:dev": "tsx watch src/server.ts",
    "run:build": "tsup src/server.ts --outDir dist",
    "start": "node dist/server.js",
    "test": "vitest run --dir src/use-cases",
    "test:watch": "vitest --dir src/use-cases",
    "test:create-prisma-environment": "prisma migrate deploy",
    "test:install-prisma-environment": "prisma generate",
    "pretest:e2e": "run-s test:create-prisma-environment test:install-prisma-environment",
    "test:e2e": "vitest run --dir src/http",
    "test:e2e:watch": "vitest --dir src/http",
    "test:coverage": "vitest run --coverage"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "packageManager": "pnpm@10.12.1",
  "dependencies": {
    "@aws-sdk/client-s3": "^3.859.0",
    "@aws-sdk/s3-request-presigner": "^3.859.0",
    "@fastify/cors": "^11.0.1",
    "@fastify/jwt": "^9.1.0",
    "@fastify/swagger": "^9.5.1",
    "@prisma/client": "^6.13.0",
    "@scalar/fastify-api-reference": "^1.33.0",
    "bcrypt": "^6.0.0",
    "bcryptjs": "^3.0.2",
    "dotenv": "^17.2.1",
    "fastify": "^5.4.0",
    "fastify-plugin": "^4.0.0",
    "fastify-type-provider-zod": "^5.0.2",
    "supertest": "^7.1.4",
    "zod": "^4.0.13"
  },
  "devDependencies": {
    "@eslint/css": "^0.10.0",
    "@eslint/js": "^9.32.0",
    "@eslint/json": "^0.13.1",
    "@types/bcrypt": "^6.0.0",
    "@types/node": "^24.1.0",
    "@types/supertest": "^6.0.2",
    "@vitest/coverage-v8": "^3.2.4",
    "eslint": "^9.32.0",
    "globals": "^16.3.0",
    "jiti": "^2.5.1",
    "npm-run-all": "^4.1.5",
    "prisma": "^6.13.0",
    "tsup": "^8.5.0",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.38.0",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.2.4"
  }
}
